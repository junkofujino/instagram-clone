<div class="container">
 <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
   <p><%= notice %></p>

   <h1>ブログ一覧</h1>
   <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %>

   <% @blogs.each do |blog| %>
   <div class="row" id="row1">
    <div class="col" id="col1">
      <h4><strong>タイトル:<%= blog.title %></strong></h4>
      <p>本文:<%= blog.content %></p>
    </div>
    <div class="col" id="col2">
      <p class="img"><%= profile_img(blog.user,"blogs") if profile_img(blog.user,"blogs") %></p>
      <p>作成者:<%= blog.user.name %></p>
    </div>
   </div>
   <div class="row" id="row2">
    <div class="col" id="col1">
      <%= link_to "ブログを編集する", edit_blog_path(blog.id), class: 'btn btn-sml btn-success' %>
      <%= link_to "ブログを削除する", blog_path(blog.id), method: :delete, data: {confirm: '本当に削除していいですか？'}, class: 'btn btn-sml btn-danger'  %>
    </div>
    <div class="col" id="col2">
      <p id="tw_date">
       作成日:<%= blog.created_at.to_s(:datetime) %><br>
       更新日:<%= blog.updated_at.to_s(:datetime) %></p>
    </div>
   </div>
   <% end %>
 </div>
</div>
